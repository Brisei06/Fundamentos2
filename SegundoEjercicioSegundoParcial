#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int x, b;
    double suma = 0;

    cout << "Ingrese el valor de x: ";
    cin >> x;

    cout << "Ingrese el valor de b (mayor a 1): ";
    cin >> b;

    while (b <= 1) {
        cout << "Error: b debe ser mayor a 1. Ingrese nuevamente: ";
        cin >> b;
    }

    for (int i = 1; i <= b; i++) {
        suma += pow(x, i);
    }

    cout << "La suma total es: " << suma << endl;

    return 0;
}
